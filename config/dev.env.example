# =====================================================
# ENVIRONMENT
# =====================================================
NODE_ENV=development
APP_NAME=BillingSystem
APP_VERSION=1.0.0

# =====================================================
# SERVER
# =====================================================
IPBIND=127.0.0.1
PORT=8080
HTTPADDRESS=127.0.0.1:8080

# Email configuration (example values)
MAILSERVER=SMTP_PROVIDER_TO_CHANGE
YDEMAIL=your_email_address_to_change@example.com

# =====================================================
# DATABASE (MongoDB)
# =====================================================
MONGODB_URL=mongodb://127.0.0.1:27017/database_name_to_change
MONGO_CONNECT_TIMEOUT_MS=10000

# =====================================================
# LOGGING
# =====================================================
LOG_LEVEL=debug
LOG_TO_FILE=false

# =====================================================
# INVOICING / PDF
# =====================================================
INVOICE_OUTPUT_DIR=invoices
PDF_PAGE_SIZE=A4
PDF_MARGIN=10

# =====================================================
# COMPANY (DEV / DEMO VALUES)
# These values are currently used for PDF generation.
# They will eventually be moved to the database.
# =====================================================
COMPANY_NAME=Demo Company Inc.
COMPANY_TITLE_LINE1=Digital Services Technician
COMPANY_TITLE_LINE2=Billing System â€“ Demo
COMPANY_ADDRESS1=123 Example Street
COMPANY_ADDRESS2=Montreal (QC)
COMPANY_POSTAL_CODE=H0H0H0
COMPANY_PHONE=000-000-0000
COMPANY_EMAIL=demo@example.com

COMPANY_GST_NUMBER=000000000
COMPANY_QST_NUMBER=000000000

# =====================================================
# TAXES (Quebec)
# =====================================================
GST_RATE=0.05
QST_RATE=0.09975

# =====================================================
# SECURITY (DEV)
# =====================================================
SESSION_SECRET=dev-session-secret-change-me
ENABLE_RATE_LIMIT=false
